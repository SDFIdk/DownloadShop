    'title' => 'Generate csv file',
    'page callback' => 'kms_csv_generate',
    'page arguments' => array(2),
    'type' => MENU_CALLBACK,
    'access arguments' => array('download csv'),
  );
  $items['csv/download/%'] = array(
    'title' => 'Download csv file',
    'page callback' => 'kms_csv_download',
    'page arguments' => array(2),
