/**
 * Translate unix timestamp to excel format.
 *
 * @param integer $timestamp
 *
 * @return string
 */
function kms_csv_date_unix_2_excel($timestamp, $format = '%a, %d/%m/%G') {
  setlocale(LC_TIME, "da_DK");
  return ucfirst(strftime($format, $timestamp));
}

