 */
function kms_csv_cronapi($op, $job = NULL) {
  switch ($op) {
    case 'list':
      return array(
        'kms_csv_job' => 'Render CSV files',
      );

    case 'rule':
      switch ($job) {
        case 'kms_csv_job': return '30 2 * * *';
          break;
      }
      break;

    case 'execute':
      switch ($job) {
        case 'kms_csv_job':
          kms_csv_job();
          break;
      }
      break;
  }
}


